<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:viewModels="clr-namespace:FinanceFuse.ViewModels.TransactionsViewModel"
             xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:converter="clr-namespace:FinanceFuse.Converter"
             x:Class="FinanceFuse.Views.TransactionsView.TransactionSelectorView"
             x:DataType="viewModels:TransactionSelectorViewModel">
    <Design.DataContext>
        <viewModels:TransactionSelectorViewModel />
    </Design.DataContext>
    <UserControl.Resources>
        <converter:PriceConverter x:Key="PriceConverter" />
        
        <DataTemplate x:Key="ItemsTemplate" DataType="viewModels:TransactionSelectorViewModel">
            <Grid>
                <StackPanel Margin="16" HorizontalAlignment="Center">
                        <controls:Card Background="#FF444444" Padding="8" Margin="20">
                            <Grid RowDefinitions="Auto,Auto,Auto">
                                <Grid HorizontalAlignment="Center" Grid.Row="2">
                                    <ComboBox ItemsSource="{Binding GroupedItemsByYear}" 
                                              SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                              PlaceholderText="Choose a year"
                                              Background="#FF333333"
                                              Foreground="White"
                                              BorderBrush="White"
                                              Margin="8,0,0,0"
                                              CornerRadius="5"
                                              VerticalContentAlignment="Center">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <ItemsControl ItemsSource="{Binding YearHeader}" Height="0" Margin="15,0"/>
                                                    <TextBlock Text="{Binding YearHeader}" FontSize="22"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </Grid>
                                <TextBlock Text="{Binding TotalYearDesc, StringFormat='Year {0}'}" FontSize="22" Foreground="White" HorizontalAlignment="Center" Margin="0,8" Grid.Row="0"/>
                                <TextBlock Text="{Binding TotalYearValue, Converter={StaticResource PriceConverter}}" FontSize="22" Foreground="White" HorizontalAlignment="Center" Margin="0,8" Grid.Row="1"/>
                            </Grid>
                        </controls:Card>
                        <ContentControl Content="{Binding TransactionPageView}"/>
                    </StackPanel>
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="NoItemsTemplate">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="No transactions available" FontSize="22" Foreground="White" HorizontalAlignment="Center" Margin="0,8"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <ContentControl Content="{Binding}" ContentTemplate="{DynamicResource ItemsTemplate}" IsVisible="{Binding HasItems}"/>
        <ContentControl ContentTemplate="{DynamicResource NoItemsTemplate}" IsVisible="{Binding !HasItems}"/>
        <Button Content="+" Width="56" Height="56" Background="#FF6200EE" Foreground="White"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="16"
                CornerRadius="28" Command="{Binding AddNewTransaction}"/>
    </Grid>
</UserControl>
