<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:viewModels="clr-namespace:FinanceFuse.ViewModels.TransactionsViewModel"
             x:Class="FinanceFuse.Views.TransactionsView.TransactionSelectorView"
             x:DataType="viewModels:TransactionSelectorViewModel">
	<Design.DataContext>
		<viewModels:TransactionSelectorViewModel />
	</Design.DataContext>
	<StackPanel>
		<ComboBox ItemsSource="{Binding GroupedItemsByYear}" 
		          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
		          >
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding YearHeader}"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<TextBlock Text="{Binding SelectedItem.YearHeader}"/>
		<ContentControl Content="{Binding MainContentViewModel}"/>
	</StackPanel>
</UserControl>
